.navigation-wrapper
  %a.logo{href: "#{root_url}" }
    %i.fa.fa-cutlery
  %a#js-mobile-menu.navigation-menu-button{href: "javascript:void(0)"} Menu
  %nav{ role: "navigation"}
    %ul.navigation-menu.show#js-navigation-menu
      = render "layouts/navigation_links"
  .navigation-tools
    .search-bar
      = form_tag(welcome_index_path, method: :get, class: "search") do
        = search_field_tag :search, nil, placeholder: "Search Recipes"
        = button_tag do
          = image_tag "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png", alt: "Search Icon"

    - if user_signed_in?
      .dropdown
        .dropdown-container
          .dropdown-button Menu
          %ul.dropdown-menu.dropdown-select
            %li
              %a{ href: "javascript:void(0)" } Your Recipes
            %li
              %a{ href: "javascript:void(0)" } Saved Recipes
            %li
              = link_to "Sign Out", destroy_user_session_path, method: :delete
    - else
      = link_to "Sign In", new_user_session_path, class: "button-blue"
