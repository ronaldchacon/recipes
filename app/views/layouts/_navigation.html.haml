.navigation-wrapper
  %a.logo{href: 'javascript:void(0)'}
    %i.fa.fa-cutlery
  %a#js-mobile-menu.navigation-menu-button{href: 'javascript:void(0)'} Menu
  %nav{role: 'navigation'}
    %ul#js-navigation-menu.navigation-menu.show
      = render 'layouts/navigation_links'
  .navigation-tools
    .search-bar
      %form.search
        %input{type: 'search', placeholder: 'Search for recipes'}
        %button{type: 'submit'}
          = image_tag 'https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png', alt: 'Search Icon'
